<!--会員一覧-->
<div class="container">
  <div class="row">
    <div class="col-md-4 mt-5">
      <h4 class="text-dark text-center title_bar">会員一覧</h4>
    </div>
    <div class="col-md-6 mt-5"></div>
  </div>
  <div class="row mt-5">
    <div class="col-md-8 offset-md-1">
      <table class="table">
        <thead>
            <tr>
              <th>会員ID</th>
              <th>氏名</th>
              <th>メールアドレス</th>
            </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td>
                <%= customer.id %>
              </td>

              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= "#{customer.last_name + customer.first_name}" %>
                <% end %>
              </td>
              <td>
                <%= customer.email %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 mx-auto">
      <%= paginate @customers %>
    </div>
  </div>
</div>
