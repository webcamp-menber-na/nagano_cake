<div class="container"> 
  <h3 class="my-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
  <div class="col-xs-6">
    <%= form_with model: @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '名前' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'フリガナ' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '郵便番号' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '住所' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '電話番号(ハイフンなし)' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'メールアドレス' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label ' ' %>
        </div>
        <div class="col-md-3">
          <%= f.submit "変更を保存", class: "btn btn-success", style: "width: 50%;" %>
        </div>
      </div>
    <% end %>
  </div>
</div>