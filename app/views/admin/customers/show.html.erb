<div class="container">
  <h3 class="my-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>
  <div class="row">
    <div class="col-sm-6 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <tr>
          <th class="table-active">会員ID</th>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <th class="table-active">氏名</th>
          <td><%= @customer.last_name + "　" + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td><%= @customer.last_name_kana + "　" + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-2 px-sm-0 offset-2">
      <%= link_to '編集する', edit_admin_customer_path, class: "btn btn-success px-4 mb-2" %>
    </div>
    <div class="col-sm-3 px-sm-0">
      <%= link_to '注文履歴一覧を見る', admin_path, class: "btn btn-primary px-4 mb-2" %>
    </div>
  </div>
</div>