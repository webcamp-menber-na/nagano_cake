<div class="container"> 
  <h3 class="my-5">商品詳細</h3>
  <div class="row pt-5">
    <div class="col-3 offset-1">
      <%= image_tag @item.image, size: "400x300" %>
    </div>
    <div class="col-5 offset-1">
      <table class="table table-hover table-inverse offset-3">
        <tbody>
          <tr>
            <td><h5>商品名</h5></td>
            <td><h5><%= @item.name %></h5></td>
          </tr>
          <tr>
            <td><h5>商品説明</h5></td>
            <td><h5><%= @item.introduction %></h5></td>
          </tr>
          <tr>
            <td><h5>税込価格<br>(税抜価格)</h5></td>
            <td><h5><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</h5></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5 offset-7">
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg px-5" %>
    </div>
  </div>
</div>