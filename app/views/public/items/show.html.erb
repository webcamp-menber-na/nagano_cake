<div class="row pt-5">
    <div class="col-3 offset-1">
      <%= image_tag @item.image, size: '400x300' %>
    </div>
    <div class="col-5 offset-1">
      <table class="table table-hover table-inverse offset-3">
        <tbody>
          <tr>
            <td><h3><%= @item.name %></h3></td>
          </tr>
          <tr>
            <td><h5><%= @item.introduction %></h5></td>
          </tr>
          <tr>
            <td><h5><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</h5></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-5 offset-7">
      <%= form_with model: @cart_item, method: :post, url: public_cart_items_path do |f| %>
        <%= f.select :amount, *[1..10], class: "w-10", include_blank: "個数選択" %>
        <%= f.submit "カートに入れる", class: "btn btn-success offset-2" %>
      <% end %>
    </div>
  </div>