<div class="container"> 
  <div class="col-8">
    <div class="row text-center col-4 my-3 ml-3 ">
      <h3 class="my-5">商品一覧</h3>
      <div class="mt-2"><span>（全<%= @items.count %>件）</span></div>
    </div>
    <div class="row">
      <% @items.each do |item| %>
    　　<div class="my-2">
          <%= link_to public_item_path(item) do %>
            <%= image_tag item.image, size: "210x150" %>
            <p class="card-title text-dark text-center"><%= item.name %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

