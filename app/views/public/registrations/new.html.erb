<div class="container"> 
  <h2 class="my-5">新規登録画面</h2>
  <div class="col-xs-6">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '名前' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: 'form-control', placeholder: '(姓)' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: 'form-control', placeholder: '(名)' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'フリガナ' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: 'form-control', placeholder: '(セイ)' %>
        </div>
        <div class="col-md-3">
          <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: 'form-control', placeholder: '(メイ)' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'メールアドレス' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '郵便番号' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '住所' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label '電話番号(ハイフンなし)' %>
        </div>
        <div class="col-md-6">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'パスワード' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %>
        </div>
        <div class="col-md-6">
        <%= f.password_field :password, autofocus: true, autocomplete: "password", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label 'パスワード(確認用)' %>
        </div>
        <div class="col-md-6">
          <%= f.password_field :password_confirmation, autofocus: true, autocomplete: "password_confirmation", class: 'form-control' %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label ' ' %>
        </div>
        <div class="col-md-3">
          <%= f.submit "新規登録", class: "btn btn-success", style: "width: 100%;" %>
        </div>
      </div>
    <% end %>
    
    <h2 class="my-5">既に登録済みの方</h2>
    <%= render "public/shared/links" %>
  </div>
</div>
