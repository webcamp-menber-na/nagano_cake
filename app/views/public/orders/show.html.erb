<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5">
      <h4 class="text-dark text-center title_bar">注文履歴詳細</h4>
    </div>
    <div class="col-md-7 mt-5"></div>
  </div>

  <div class="row mt-5">
    <div class="col">
      <h4 class="font-weight-bold">注文情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.to_s(:datetime_jp).gsub(/\s\+\d{4}/, '') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            <%= '〒' + @order.ship_postalcode %><br>
            <%= @order.ship_address %><br>
            <%= @order.ship_name %>
          </td>
        </tr>
        <tr>
          <th>支払方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
      </table>
    </div>

    <div class="col">
      <h4 class="font-weight-bold">請求情報</h4>
      <table class="table table-bordered">
        <tr>
          <th>商品合計</th>
          <td><%= (@order.payment_amount - @order.postage).to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.postage.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.payment_amount.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <h4 class="font-weight-bold">注文内容</h4>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">商品</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">個数</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= (order_detail.item.price * 1.1).floor.to_s(:delimited) %></td>
              <td><%= order_detail.quantity %></td>
              <td><%= ((order_detail.item.price * 1.1).floor * order_detail.quantity).to_s(:delimited) %></td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>