<div class="container p-3">
  <div class="row">
    <div class="col">
      <h4 class="mt-3">ショッピングカート</h4>
      <div class="text-right mb-3">
        <%= link_to "カートを空にする", public_cart_items_destroy_all_path(current_customer.id), method: :delete, class:"btn btn-danger" %>
      </div>
      <% if current_customer.cart_items.present? %>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">"　"</th>
          </tr>
        </thead>
        <tbody>
          <% current_customer.cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, :size => '50' %>
              <%= cart_item.item.name %>
            </td>
            <td>
              ¥<%= cart_item.item.add_tax_price.to_s(:delimited) %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <div class="text-center mt-5">
        <h4>ショッピングカート</h4>
        <p>カート内に商品がありません。</p>
      </div>
      <% end %>
    </div>
  </div>
</div>