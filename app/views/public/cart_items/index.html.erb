<div class="container p-3">
  <div class="row">
    <div class="col">
      <% if @cart_items.any? %>
      <h4 class="mt-3">ショッピングカート</h4>
      <div class="text-right mb-3">
        <%= link_to "カートを空にする", public_cart_items_destroy_all_path(current_customer.id), method: :delete, class:"btn btn-danger" %>
      </div>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-active">商品名</th>
            <th class="table-active">単価(税込)</th>
            <th class="table-active">数量</th>
            <th class="table-active">小計</th>
            <th class="table-active">"　"</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= image_tag cart_item.item.image, size:"100x75", class: "object-fit-cover mr-3" %>
              <%= cart_item.item.name %>
            </td>
            <td>
              <%= ((cart_item.item.price * 1.1).floor).to_s(:delimited) %>
            </td>
            <td>
              <%= form_with model:cart_item, url: public_cart_item_path(cart_item.id), local:true do |f| %>
                <%= f.select :quantity, 1..10 %>
                <%= f.submit "変更", class:"btn btn-success" %>
              <% end %>
            </td>
            <td><%= ((cart_item.item.price * 1.1).floor * cart_item.amount).to_s(:delimited) %></td>
            <td><%= link_to "削除する", public_cart_item_path(cart_item.id), method: :delete, "data-confirm" => "商品を削除しますか？", class: "btn btn-danger"%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
      <div class="text-center mt-5">
        <h4>ショッピングカート</h4>
        <p>カート内に商品がありません。</p>
      </div>
      <% end %>
    </div>
  </div>
</div>