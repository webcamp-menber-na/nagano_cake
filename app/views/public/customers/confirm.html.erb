<div class="container">
  <div class="row my-3">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>退会画面</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-4 mb-4 offset-md-1">
      <h4>退会しますか？</h4>
    </div>
  </div>
  <div class="row offset-md-2">
    <div class="col-3 mb-4">
      <%= link_to "退会しない", public_customer_path(current_customer), class:"btn btn-success" %>
    </div>
    <div class="col-3 mb-4">
      <%= link_to "退会する", public_customers_withdraw_path(current_customer), class:"btn btn-danger", method: :patch, data: { confirm: "本当に退会しますか？" } %>
    </div>
  </div>
</div>
